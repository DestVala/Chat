<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chat.smm.gui.LoginController">
   <children>
      <Button fx:id="loginButton" onAction="#logToChat" layoutX="130.0" layoutY="225.0" mnemonicParsing="false"
              text="Login" />
      <Label alignment="CENTER" layoutX="23.0" layoutY="38.0" prefHeight="35.0" prefWidth="259.0"
             text="Witaj w Chat MUS!">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label fx:id="warning" alignment="CENTER" layoutX="23.0" layoutY="90.0" prefHeight="35.0" prefWidth="259.0"  textFill="crimson">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextField fx:id="textField" onKeyPressed="#pushEnter"  alignment="CENTER" layoutX="78.0" layoutY="138.0"
                 promptText="podaj login" />
      <PasswordField fx:id="textFieldPassword" onKeyPressed="#pushEnter" alignment="CENTER" layoutX="78.0" layoutY="178.0"
                 promptText="podaj haslo" />
   </children>
</AnchorPane>
